@using QS2015.Resources;
@using QS2015.Connectivity;
@using QS2015.Models;

<!DOCTYPE html>
<html lang="en">

@{    
    string webpagetitle = "";
    
    string thiswebpage = ViewBag.Title;
    string commonttitle = Resources.Shared_Title;

    if (thiswebpage.Equals(""))
    {
        webpagetitle = commonttitle;
    }
    else
    {
        webpagetitle = thiswebpage + " - " + commonttitle;
    }

    string currentLanguage = Session["Culture"].ToString();

}

<head>
    <meta charset="utf-8" />
    <title>@webpagetitle</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/Site.css?v=" + AppGlobalVariables.AppVersion)

    <link href="@Url.Content("~/Styles/normalize.css?v=" + AppGlobalVariables.AppVersion)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Styles/style.css?v=" + AppGlobalVariables.AppVersion)" rel="stylesheet" type="text/css" />

    <!--[if ! lte IE 6]><!-->
    <link rel="stylesheet" media="screen, handheld" href="~/Styles/screen.css" /><!--<![endif]-->

    <script src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")"></script>

    <script type="text/javascript">
        var mylang = "@currentLanguage";
    </script>
    <script src="@Url.Content("~/Scripts/menu-panel.js")"></script>

    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("Styles", false)
</head>



<body>

    <header>
        <div class="content-wrapper">

            <div class="float-left" id="unece-logo-phone">
                <a href="@Url.Action("Index", "Home", new { lang = currentLanguage }, null)"><img src="@Url.Content("~/Images/IcoMoon/PNG/32px/0001-home.png")" alt="@Resources.Shared_Icon_Home" /></a>
                <a href="#0" class="btn-slide"><img src="@Url.Content("~/Images/IcoMoon/PNG/32px/0190-menu.png")" alt="@Resources.Shared_Icon_Menu" /></a>
                <b>@Resources.Shared_Banner_Title</b>
            </div>

            <div class="float-left" id="unece-logo">
                <a href="@Url.Action("Index", "Home", new { lang = currentLanguage }, null)">
                    <img style="margin: 5px 5px 5px 5px;" src="@Url.Content("~/Images/UNECE_logo_70_4.png")" alt="@Resources.Shared_Banner_Home" />
                </a>
            </div>

            <div class="unece-menu-wrapper">
                <div class="float-right" id="unece-menu">
                    <div class="float-right">
                        @{
                            foreach (LanguageModel thisLanguage in LanguagesModel.getLanguages()) {
                                string strCode = thisLanguage.Code;
                                string strLongCode = thisLanguage.LongCode;

                                @Html.ActionLink(strLongCode, "ChangeCulture", "Home", new { lang = strCode, returnUrl = Request.RawUrl }, null);
                            }
                        }

                        <a href="#0" class="btn-slide"><img src="@Url.Content("~/Images/IcoMoon/PNG/32px/0190-menu.png")" alt="@Resources.Shared_Icon_Menu" /></a>
                    </div>
                </div>

                <div class="float-right" id="android-app">
                    <a href="https://play.google.com/store/apps/details?id=org.unece.stats&hl=@currentLanguage">
                        <img class="googleplaybadge" alt="Android app on Google Play" src="@Url.Content("~/Images/google-play-badge.png")" />
                    </a>
                </div>
            </div>

        </div>

    </header>











    <div id="body" class="separator-line">

        <div class="menu-settings-panel">
            <div>
                <a href="https://play.google.com/store/apps/details?id=org.unece.stats&hl=@currentLanguage">
                    <img class="googleplaybadge" alt="Android app on Google Play" src="@Url.Content("~/Images/google-play-badge.png")" />
                </a>
            </div>

            <div class="menu-settings-element">
                <a href="@Url.Action("Index", "Home", new { lang = currentLanguage }, null)"><b>@Resources.Shared_Menu_Home</b></a>
            </div>

            @{
                foreach (LanguageModel thisLanguage in LanguagesModel.getLanguages())
                {
                    string strCode = thisLanguage.Code;
                    string strLongCode = thisLanguage.LongCode;

                    <div class="menu-settings-element">
                        <a href="@Url.Action("ChangeCulture", "Home", new { lang = @strCode, returnUrl = Request.RawUrl }, null)"><b>*&nbsp;@strLongCode</b></a>
                    </div>
                }
            }

            <div class="menu-settings-element">
                <a href="@Url.Action("Index", "RankingDomains", new { lang = currentLanguage }, null)"><b>&nbsp;&nbsp;@Resources.Shared_Menu_Country_Rankings</b></a>
            </div>

            <div class="menu-settings-element">
                <a href="@Url.Action("Index", "Countries", new { lang = currentLanguage }, null)"><b>&nbsp;&nbsp;@Resources.Shared_Menu_Country_Profiles</b></a>
            </div>

            <div class="menu-settings-element">
                <a href="@Url.Action("Index", "ChartDomains", new { lang = currentLanguage }, null)"><b>&nbsp;&nbsp;@Resources.Shared_Menu_Charts</b></a>
            </div>

            <div class="menu-settings-element">
                <a href="@Url.Action("Index", "MapDomains", new { lang = currentLanguage }, null)"><b>&nbsp;&nbsp;@Resources.Shared_Menu_Maps</b></a>
            </div>

            <div class="menu-settings-element">
                <a href="@Url.Action("Index", "PDFCountryProfiles", new { lang = currentLanguage }, null)"><b>&nbsp;&nbsp;@Resources.Shared_Menu_PDF_Publications</b></a>
            </div>

            <div class="menu-settings-element">
                <a href="@Url.Action("Index", "About", new { lang = currentLanguage }, null)">
                    <b>@Resources.Shared_Menu_About</b>
                </a>
            </div>

            <div class="menu-settings-element">
                <a href="http://www.unece.org/statistics/"><b>@Resources.Shared_Menu_Statistical_Division</b></a>
            </div>

            <div class="menu-settings-element">
                <a href="http://www1.unece.org/stat/platform/display/Statgloss/Concepts+and+Definitions+by+Statistical+Domain;"><b>@Resources.Shared_Menu_Glossary</b></a>
            </div>

            <div class="menu-settings-element">
                <a href="http://www1.unece.org/stat/platform/display/DLoc/Welcome+to+the+UNECE+Data+Locator"><b>@Resources.Shared_Menu_Data_Locator</b></a>
            </div>

        </div>




        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>


    <footer class="footer-text">
        <div class="content-wrapper no-wrapper">
            <br /><br /><br />
            <div class="float-left">
                <a href="@Url.Content("~/Static/Copyright_notice.html")">
                    @Resources.Shared_Footer_Disclaimer
                </a>
            </div>
            <div class="float-right">
                <a href="mailto:support.stat@unece.org">
                    <img src="~/Images/mail.gif" border="0" width="20" height="11" />
                    &nbsp;support.stat@unece.org
                </a>
            </div>

            <br /><br /><br />
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
        var pageTracker = _gat._getTracker("UA-2122519-2");
        pageTracker._initData();
        pageTracker._trackPageview();
    </script>

</body>
</html>
